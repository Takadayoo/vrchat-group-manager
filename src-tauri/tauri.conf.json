{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VRChat Group Manager",
  "version": "0.2.0",
  "identifier": "com.takadayoo.vrchat-group-manager",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "VRChat Group Manager",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/vgm-32x32.png",
      "icons/vgm-128x128.png",
      "icons/vgm-icon.icns",
      "icons/vgm-icon.ico"
    ],
    "windows": {
      "nsis": {
        "languages": ["Japanese"],
        "installerIcon": "icons/vgm-icon.ico",
        "installerHooks": "nsis/hooks.nsh",
        "displayLanguageSelector": false
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
